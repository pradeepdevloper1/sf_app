<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XF.BASE.PlaceHolderView"
    x:Name="this">

    <Frame
        BindingContext="{x:Reference this}"
        Padding="1"
        HasShadow="False"
        BorderColor="{Binding ViewBorderColor}"
        BackgroundColor="{Binding ViewBgColor}"
        Style="{StaticResource PlaceHolderFrameView}">

        <Label
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            Padding="57,0"
            HorizontalTextAlignment="Center"
            TextTransform="Uppercase"
            TextColor="{Binding ViewTextColor}"
            Style="{StaticResource SmallHeaderLabel}"
            Text="{Binding ViewText}" />
    </Frame>

</ContentView>
