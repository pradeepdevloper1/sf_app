<?xml version="1.0" encoding="UTF-8" ?>
<MasterDetailPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XF.BASE.Pages.MasterPage" NavigationPage.HasNavigationBar="False" MasterBehavior="Popover">
 <MasterDetailPage.Master>
          <ContentPage  Title="Menu" BackgroundColor="#F5F5F5">
            <StackLayout Margin="10,50,10,0" BackgroundColor="#ECECEC">
        <Frame Padding="0" BackgroundColor="White" Margin="20,30,20,0">
           <Label Text="Issue to next process" FontSize="20" HorizontalTextAlignment="Center"  TextColor="Black"   HeightRequest="50" BackgroundColor="White" ></Label>
        
                <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TapCommand}" Tapped="TapGestureRecognizer_Tapped"/>
                    </Frame.GestureRecognizers>
            </Frame>
                </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <ContentPage>
            
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>
