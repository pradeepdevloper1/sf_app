<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="XF.APP.DarkTheme"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="AccentColor">#2E96C1</Color>
    <Color x:Key="InverseTextColor">White</Color>

    <Color x:Key="BaseBackgroundColor">White</Color>

    <Color x:Key="BaseTextColor">#4A4A4A</Color>
    <Color x:Key="BaseTextColorLight">#8493A4</Color>

    <Color x:Key="PrimaryBackColor">#2E96C1</Color>
    <Color x:Key="PrimaryBackEndColor">#49EDE3</Color>
    <Color x:Key="PrimaryTextColor">White</Color>
    <Color x:Key="SecondaryBackColor">White</Color>
    <Color x:Key="SecondaryTextColor">Black</Color>

    <Color x:Key="SimpleBorderColor">#E5E5E5</Color>

    <!--  control properties  -->
    <Color x:Key="ControlBackgroundColor">White</Color>
    <Color x:Key="ControlTextColor">#4A4A4A</Color>
    <Color x:Key="ControlPlaceholderColor">#4A4A4A</Color>
    <Color x:Key="ControlBorderColor">#4A4A4A</Color>


</ResourceDictionary>